= render 'elements/header'
%p#notice= notice
.add-trbl-margin
  %p
    %b Judul:
    = @surat_keluar.judul
  %p
    %b Keterangan:
    = @surat_keluar.keterangan
  
  = link_to '<button class="btn btn-primary btn-circle btn-xl"><i class="fa fa-lg fa-pencil" title="Edit surat masuk"></i></button>'.html_safe, edit_surat_keluar_path(@surat_keluar), class: 'center-block'
  .row.align-items-center.justify-content-center
    .row
      = link_to '<button class="btn btn-primary btn-circle btn-xl"><i class="fa fa-lg fa-arrow-left" title="Kembali ke daftar surat masuk"></i></button>'.html_safe, surat_keluar_index_path, class: 'center-block'