    .p-5.text-center
      .card-deck
        - @surat_keluar_awal.each do |surat_keluar|
          .col-md-4
            .card.p-5.m-1
              .card-block
                %h4
                  %b= surat_keluar.judul
                %p= surat_keluar.keterangan
                %p
              .card-block
                %a
                = link_to '<i class="fa d-inline fa-lg fa-expand" title="Tampilkan surat keluar"></i>'.html_safe, surat_keluar, class: 'btn btn-sm btn-primary mx-1'
                %a
                = link_to '<i class="fa d-inline fa-lg fa-pencil" title="Edit surat keluar"></i>'.html_safe, edit_surat_keluar_path(surat_keluar), class: 'btn btn-sm btn-primary mx-1'
