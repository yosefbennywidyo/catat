= simple_form_for(@status_kepegawaian, html: { class: 'form-horizontal add-left-margin' }, defaults: { wrapper_html: { class: 'col-md-4 mb-2' } } ) do |f|
  - if @status_kepegawaian.errors.any?
    #error_explanation
      %h2= "#{pluralize(@status_kepegawaian.errors.count, "error")} menyebabkan Status Kepegawaian yang dibuat tidak dapat disimpan:"
      %ul
        - @status_kepegawaian.errors.full_messages.each do |message|
          %li= message
  .row
    = f.input :status_kepegawaian, label_method: :status_kepegawaian
  .row
    = button_tag(type: 'submit', class: "btn btn-primary") do
      %i.fa.d-inline.fa-lg.fa-save
      Simpan


