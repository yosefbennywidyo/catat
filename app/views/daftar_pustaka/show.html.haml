= render 'elements/header'
%p#notice= notice
.add-trbl-margin
  %p
    %b Judul:
    = @daftar_pustaka.judul
  %p
    %b Keterangan:
    = @daftar_pustaka.keterangan
  
  = link_to '<button class="btn btn-primary btn-circle btn-lg"><i class="fa fa-lg fa-pencil" title="Edit pustaka"></i></button>'.html_safe, edit_daftar_pustaka_path(@daftar_pustaka), class: 'center-block'
  .row.align-items-center.justify-content-center
    .row
      = link_to '<button class="btn btn-primary btn-circle btn-lg"><i class="fa fa-lg fa-arrow-left" title="Kembali ke daftar pustaka"></i></button>'.html_safe, daftar_pustaka_index_path, class: 'center-block'