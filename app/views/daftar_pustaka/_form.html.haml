= simple_form_for(@daftar_pustaka, html: { class: 'form-horizontal add-left-margin' }, defaults: { wrapper_html: { class: 'col-md-4 mb-2' } } ) do |f|
  - if @daftar_pustaka.errors.any?
    #error_explanation
      %h2= "#{pluralize(@daftar_pustaka.errors.count, "error")} menyebabkan Surat Keluar yang dibuat tidak dapat disimpan:"
      %ul
        - @daftar_pustaka.errors.full_messages.each do |message|
          %li= message
  .row
    = f.input :judul, label: 'Judul'
  .row
    = f.input :keterangan, label: 'Keterangan'
  .row
    = button_tag(type: 'submit', class: "btn btn-primary") do
      %i.fa.d-inline.fa-lg.fa-save
      Simpan