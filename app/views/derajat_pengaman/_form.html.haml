= simple_form_for(@derajat_pengaman, html: { class: 'form-horizontal add-left-margin' }, defaults: { wrapper_html: { class: 'col-md-4 mb-2' } } ) do |f|
  - if @derajat_pengaman.errors.any?
    #error_explanation
      %h2= "#{pluralize(@derajat_pengaman.errors.count, "error")} menyebabkan Derajat Pengaman yang dibuat tidak dapat disimpan:"
      %ul
        - @derajat_pengaman.errors.full_messages.each do |message|
          %li= message
  .row
    = f.input :nama, label_method: :nama
  .row
    = button_tag(type: 'submit', class: "btn btn-primary") do
      %i.fa.d-inline.fa-lg.fa-save
      Simpan