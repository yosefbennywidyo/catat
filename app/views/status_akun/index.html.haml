= render 'elements/header'
%h1 Daftar Status Akun

.py-5
  .row
    .col-md-12
      %table.table
        %thead
          %tr
            %th Status Akun
            %th
            %th
            %th
        
        %tbody
          - @status_akun.each do |status_akun|
            %tr
              %td= status_akun.keterangan
              %td= link_to '<i class="fa d-inline fa-lg fa-expand" title="Tampilkan status akun"></i>'.html_safe, status_akun, class: 'btn btn-sm btn-primary mx-1'
              %td= link_to '<i class="fa d-inline fa-lg fa-pencil" title="Edit status akun"></i>'.html_safe, edit_status_akun_path(status_akun), class: 'btn btn-sm btn-primary mx-1'
              %td= link_to '<i class="fa d-inline fa-lg fa-trash" title="Hapus status akun"></i>'.html_safe, status_akun, method: :delete, data: { confirm: 'Anda yakin ingin menghapus status akun ini?' }, class: 'btn btn-sm btn-primary mx-1'

.row.align-items-center.justify-content-center
  .row
    = link_to '<button class="btn btn-primary btn-circle btn-xl"><i class="fa fa-lg fa-arrow-left" title="Kembali ke Dasbor"></i></button>'.html_safe, dasbor_index_path, class: 'center-block'
    = link_to '<button class="btn btn-primary btn-circle btn-xl"><i class="fa fa-lg fa-plus" title="Buat status akun"></i></button>'.html_safe, new_status_akun_path, class: 'center-block add-left-margin'