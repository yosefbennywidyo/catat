= simple_form_for(@seksi, html: { class: 'form-horizontal add-left-margin' }, defaults: { wrapper_html: { class: 'col-md-4 mb-2' } } ) do |f|
  - if @seksi.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seksi.errors.count, "error")} menyebabkan Seksi yang dibuat tidak dapat disimpan:"
      %ul
        - @seksi.errors.full_messages.each do |message|
          %li= message
  .row
    = f.input :nama, label_method: :nama
  .row
    = button_tag(type: 'submit', class: "btn btn-primary") do
      %i.fa.d-inline.fa-lg.fa-save
      Simpan