= render 'elements/header'
%p#notice= notice
.add-trbl-margin
  %p
    %b Nomor surat:
    = @surat_masuk.nomor_surat
  %p
    %b Tanggal surat:
    = @surat_masuk.tanggal_surat
  %p
    %b Lampiran:
    = @surat_masuk.lampiran
  %p
    %b Diterima tgl:
    = @surat_masuk.diterima_tgl
  %p
    %b No agenda:
    = @surat_masuk.no_agenda
  %p
    %b Status:
    = @surat_masuk.status
  %p
    %b Sifat:
    = @surat_masuk.sifat
  %p
    %b Derajat:
    = @surat_masuk.derajat_pengaman
  %p
    %b Dari:
    = @surat_masuk.dari
  %p
    %b Perihal:
    = @surat_masuk.perihal
  
  = link_to '<button class="btn btn-primary btn-circle btn-xl"><i class="fa fa-lg fa-pencil" title="Edit surat masuk"></i></button>'.html_safe, edit_surat_masuk_path(@surat_masuk), class: 'center-block'
  .row.align-items-center.justify-content-center
    .row
      = link_to '<button class="btn btn-primary btn-circle btn-xl"><i class="fa fa-lg fa-arrow-left" title="Kembali ke daftar surat masuk"></i></button>'.html_safe, surat_masuk_index_path, class: 'center-block'