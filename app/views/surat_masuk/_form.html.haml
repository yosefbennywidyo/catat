= form_for @surat_masuk do |f|
  - if @surat_masuk.errors.any?
    #error_explanation
      %h2= "#{pluralize(@surat_masuk.errors.count, "error")} prohibited this surat_masuk from being saved:"
      %ul
        - @surat_masuk.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :nomor_surat
    = f.text_field :nomor_surat
  .field
    = f.label :tanggal_surat
    = f.date_select :tanggal_surat
  .field
    = f.label :lampiran
    = f.text_field :lampiran
  .field
    = f.label :diterima_tgl
    = f.date_select :diterima_tgl
  .field
    = f.label :no_agenda
    = f.text_field :no_agenda
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :sifat
    = f.text_field :sifat
  .field
    = f.label :derajat
    = f.text_field :derajat
  .field
    = f.label :pengaman
    = f.text_field :pengaman
  .field
    = f.label :dari
    = f.text_field :dari
  .field
    = f.label :perihal
    = f.text_field :perihal
  .actions
    = f.submit 'Save'
